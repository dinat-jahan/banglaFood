<div class="container">
  <div class="accordion message" id="accordionExample" my-5 py-5>
    <% messages.forEach((message,index) => { %>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button
          class="text-danger h-4 accordion-button <%= index === 0 ? '' : 'collapsed' %>"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapse<%= index %>"
          aria-expanded="<%= index === 0 ? 'true' : 'false' %>"
          aria-controls="collapse<%= index %>"
        >
          <%= message.fullName %>
        </button>
      </h2>
      <div
        id="collapse<%= index %>"
        class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>"
        data-bs-parent="#accordionExample"
      >
        <div class="accordion-body">
          <%= message.message %> <br />
          <strong>Name: </strong>
          <span class="text-warning"><%= message.fullName %></span><br />
          <strong>Email: </strong>
          <span class="text-warning"><%= message.email %></span>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
