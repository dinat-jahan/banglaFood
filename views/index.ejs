<section class="recipes">
  <h1><b>Featured Recipes</b></h1>
  <div class="swiper-container swiper text-center">
    <div class="slide-container container-fluid m-3">
      <div class="swiper-wrapper card-wrapper">
        <div class="recipie-section">
          <% recipes.forEach(recipe => { %>
          <div class="recipie-card">
            <img src="<%= recipe.imageUrl %>" />
            <h2><b><%= recipe.title %></b></h2>

            <a href="/recipe/<%= recipe._id %>">View Recipe</a>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</section>
<nav aria-label="Page navigation ">
  <ul class="pagination">
    <% if (prevPage !== null) { %>
    <li class="page-item">
      <a class="page-link" href="/?page=<%= prevPage %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <% } %> <% for( let page =1 ; page <= countPage ; page++ ) { %>
    <li class="page-item">
      <a class="page-link" href="/?page=<%= page %>"><%= page %></a>
    </li>
    <% } %> <% if (nextPage !== null) { %>
    <li class="page-item">
      <a class="page-link" href="/?page=<%= nextPage %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
    <% } %>
  </ul>
</nav>
