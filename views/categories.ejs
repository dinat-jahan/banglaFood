<div class="container-xl mt-5">
  <div class="row row-cols-1 row-cols-md-4 g-3">
    <% categories.forEach(category => { %>
    <div class="col mb-4 card-category mt-5">
      <div class="card h-100" style="width: 100%">
        <!-- Add h-100 and remove fixed width -->
        <a href="/category/<%= category.name%>">
          <img src="<%= category.imageUrl %>" class="card-img-top" alt="..." />
        </a>
        <div class="card-body d-flex flex-column">
          <!-- Use flex-column for better alignment -->
          <h2 class="card-title text-center">
            <%= category.name.charAt(0).toUpperCase() +
            category.name.slice(1).toLowerCase() %>
          </h2>
          <a href="/category/<%= category.name%>" class="btn btn-light mt-auto">
            <!-- mt-auto pushes the button down -->
            Get Bengali <%= category.name.charAt(0).toUpperCase() +
            category.name.slice(1).toLowerCase() %> Ideas here
          </a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
